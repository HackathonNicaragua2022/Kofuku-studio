<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Descubre_Nica.View.HomePage"
             NavigationPage.HasNavigationBar="False"
             IconImageSource="greenHome"
             BackgroundColor="#ffffff">
    <ContentPage.Content>
        <Grid x:Name="MainContent"
              RowDefinitions="200,*">
            <StackLayout Grid.Row="0">
                <Label Text="asd" />
                <Frame Grid.Row="1"
                       CornerRadius="20"
                       BackgroundColor="Aqua"
                       AnchorY="10">
                    <StackLayout>
                        <Button Margin="10,80,0,0"
                                CornerRadius="20"
                                Text="Historial de viajes"
                                FontSize="Medium"
                                FontAttributes="Bold"
                                TextColor="#696969"
                                VerticalOptions="End"
                                HorizontalOptions="Start"
                                TranslationY="-100"
                                Command="{Binding NavHisPageCommand}" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>